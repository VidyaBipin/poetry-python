[flake8]
min_python_version = 3.7.0
extend-select =
    # TC: Import should be inside/outside type-checking block
    TC,
    # TC1: Use from __future__ import annotations style
    TC1,
extend-ignore =
    # E203: Whitespace before ':' (pycqa/pycodestyle#373)
    E203,
    # ANN1: Missing type annotation for {self,cls} in {,class}method
    ANN1,
    # PIE781: assign-and-return (used for mypy hinting)
    PIE781,
per-file-ignores =
    # ANN201: Missing return type annotation for public function
    tests/test_*:ANN201,
    tests/**/test_*:ANN201,
    # PIE798: no-unnecessary-class: Consider using a module for namespacing instead
    src/poetry/vcs/git/*:PIE798,
extend-exclude =
    # Frozen and not subject to change in this repo:
    get-poetry.py,
    install-poetry.py,
    # External to the project's coding standards:
    tests/fixtures/*,
    tests/**/fixtures/*,
# black: https://black.readthedocs.io/en/stable/guides/using_black_with_other_tools.html#flake8
max-line-length = 88
# flake8-eradicate: https://github.com/wemake-services/flake8-eradicate#options
eradicate-aggressive = 1
eradicate-whitelist-extend = ^-.*;
# flake8-quotes: https://github.com/zheller/flake8-quotes#configuration
inline-quotes = double
# flake8-tidy-imports: https://github.com/adamchainz/flake8-tidy-imports#ban-relative-imports
ban-relative-imports = true
# flake8-type-checking: https://github.com/snok/flake8-type-checking
type-checking-exempt-modules = typing, typing-extensions
# flake8-use-fstring: https://github.com/MichaelKim0407/flake8-use-fstring#--percent-greedy-and---format-greedy
format-greedy = 1
